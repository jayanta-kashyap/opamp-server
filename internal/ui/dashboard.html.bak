<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OpAMP Device Management</title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
            min-height: 100vh;
            padding: 20px;
            color: #e0e0e0;
        }
        .container { max-width: 1600px; margin: 0 auto; }
        h1 { color: #00d4ff; text-align: center; margin-bottom: 5px; font-size: 1.6em; }
        .header-subtitle { text-align: center; color: #888; margin-bottom: 15px; font-size: 0.8em; }
        
        /* Dynamic Stats Bar */
        .stats-bar { display: flex; gap: 12px; margin-bottom: 15px; flex-wrap: wrap; }
        .stat-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            padding: 12px 20px;
            text-align: center;
            min-width: 120px;
        }
        .stat-card.clickable { cursor: pointer; transition: all 0.2s; }
        .stat-card.clickable:hover { border-color: rgba(0, 212, 255, 0.5); background: rgba(0, 212, 255, 0.05); }
        .stat-card.clickable.active { border-color: #00d4ff; background: rgba(0, 212, 255, 0.1); }
        .stat-value { font-size: 1.5em; font-weight: bold; color: #00d4ff; }
        .stat-label { font-size: 0.75em; color: #888; margin-top: 3px; }
        .stat-card.agent-type .stat-value { font-size: 1.3em; }
        
        /* Search and Filter Bar */
        .filter-bar {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            align-items: center;
            flex-wrap: wrap;
        }
        .search-box {
            flex: 1;
            min-width: 200px;
            padding: 10px 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.3);
            color: #e0e0e0;
            font-size: 14px;
        }
        .search-box:focus { outline: none; border-color: rgba(0, 212, 255, 0.5); }
        .filter-btn {
            padding: 10px 16px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            background: transparent;
            color: #aaa;
            cursor: pointer;
            font-size: 13px;
            transition: all 0.2s;
        }
        .filter-btn:hover { border-color: rgba(0, 212, 255, 0.5); color: #fff; }
        .filter-btn.active { border-color: #00d4ff; background: rgba(0, 212, 255, 0.1); color: #00d4ff; }
        
        /* Grid Layout */
        .grid-layout {
            display: grid;
            grid-template-columns: 420px 1fr;
            gap: 15px;
            align-items: start;
        }
        .card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 15px;
        }
        .section-title {
            font-size: 0.9em;
            color: #00d4ff;
            margin-bottom: 12px;
            padding-bottom: 8px;
            border-bottom: 1px solid rgba(0, 212, 255, 0.3);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .device-count { color: #888; font-size: 0.85em; }
        
        /* Device List with Virtual Scroll */
        .device-list-container {
            max-height: 600px;
            overflow-y: auto;
            scrollbar-width: thin;
            scrollbar-color: rgba(0, 212, 255, 0.3) transparent;
        }
        .device-list-container::-webkit-scrollbar { width: 6px; }
        .device-list-container::-webkit-scrollbar-track { background: transparent; }
        .device-list-container::-webkit-scrollbar-thumb { background: rgba(0, 212, 255, 0.3); border-radius: 3px; }
        .device-list { display: flex; flex-direction: column; gap: 8px; }
        
        /* Compact Device Card */
        .device-card {
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.15s ease;
            background: rgba(0, 0, 0, 0.2);
        }
        .device-card:hover { border-color: rgba(0, 212, 255, 0.4); background: rgba(0, 212, 255, 0.03); }
        .device-card.selected { border-color: #00d4ff; background: rgba(0, 212, 255, 0.08); }
        .device-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 6px; }
        .device-name { font-weight: 600; color: #fff; font-size: 0.95em; }
        .agent-badge {
            font-size: 0.65em;
            padding: 2px 8px;
            border-radius: 10px;
            font-weight: 600;
            text-transform: uppercase;
        }
        .agent-badge.otelcol { background: linear-gradient(135deg, #667eea, #764ba2); color: white; }
        .agent-badge.fluentbit { background: linear-gradient(135deg, #11998e, #38ef7d); color: white; }
        .agent-badge.vector { background: linear-gradient(135deg, #f093fb, #f5576c); color: white; }
        .agent-badge.telegraf { background: linear-gradient(135deg, #4facfe, #00f2fe); color: white; }
        .agent-badge.unknown { background: rgba(150, 150, 150, 0.5); color: white; }
        .device-meta { display: flex; align-items: center; gap: 8px; flex-wrap: wrap; }
        .status-dot { width: 8px; height: 8px; border-radius: 50%; flex-shrink: 0; }
        .status-dot.online { background: #4caf50; box-shadow: 0 0 6px #4caf50; }
        .status-dot.offline { background: #666; }
        .meta-tag {
            font-size: 0.7em;
            padding: 2px 6px;
            border-radius: 4px;
            background: rgba(255, 255, 255, 0.08);
            color: #aaa;
        }
        .emission-badge {
            font-size: 0.65em;
            padding: 2px 8px;
            border-radius: 10px;
            font-weight: 600;
            margin-left: auto;
        }
        .emission-badge.on { background: rgba(76, 175, 80, 0.3); color: #81c784; }
        .emission-badge.off { background: rgba(100, 100, 100, 0.3); color: #999; }
        
        /* Config Panel */
        .config-section { display: none; }
        .config-section.active { display: block; }
        .config-header-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .device-title { display: flex; align-items: center; gap: 10px; }
        .device-title-name { font-size: 1.1em; font-weight: 600; color: #fff; }
        .emission-toggle {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 15px;
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.3);
        }
        .emission-label { font-size: 0.8em; color: #888; }
        .toggle-switch {
            position: relative;
            width: 50px;
            height: 26px;
            background: #444;
            border-radius: 13px;
            cursor: pointer;
            transition: background 0.2s;
        }
        .toggle-switch.on { background: #4caf50; }
        .toggle-switch::after {
            content: '';
            position: absolute;
            width: 22px;
            height: 22px;
            background: white;
            border-radius: 50%;
            top: 2px;
            left: 2px;
            transition: left 0.2s;
        }
        .toggle-switch.on::after { left: 26px; }
        .toggle-switch.disabled { opacity: 0.5; cursor: not-allowed; }
        .toggle-switch.locked { cursor: not-allowed; position: relative; }
        .toggle-switch.locked:hover::before {
            content: attr(data-tooltip);
            position: absolute;
            bottom: 100%;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.9);
            color: #00d4ff;
            padding: 8px 12px;
            border-radius: 6px;
            font-size: 11px;
            white-space: nowrap;
            margin-bottom: 8px;
            z-index: 1000;
            border: 1px solid rgba(0, 212, 255, 0.3);
        }
        
        .config-label { font-size: 0.85em; color: #aaa; font-weight: 600; margin-bottom: 8px; display: flex; justify-content: space-between; align-items: center; }
        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            background: rgba(0, 0, 0, 0.3);
            color: #e0e0e0;
            font-size: 12px;
            font-family: 'Monaco', 'Menlo', monospace;
            line-height: 1.4;
            resize: vertical;
        }
        textarea:focus { outline: none; border-color: rgba(0, 212, 255, 0.5); }
        .current-config { height: 180px; background: rgba(0, 0, 0, 0.4); }
        .new-config { height: 160px; }
        .button-row { display: flex; gap: 10px; margin-top: 12px; }
        .btn {
            padding: 10px 18px;
            border: none;
            border-radius: 6px;
            font-size: 13px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-primary { background: linear-gradient(135deg, #00d4ff, #0099cc); color: #000; }
        .btn-primary:hover:not(:disabled) { transform: translateY(-1px); box-shadow: 0 4px 15px rgba(0, 212, 255, 0.3); }
        .btn-secondary { background: rgba(255, 255, 255, 0.1); color: #fff; border: 1px solid rgba(255, 255, 255, 0.2); }
        .btn-secondary:hover:not(:disabled) { background: rgba(255, 255, 255, 0.15); }
        .btn-small { padding: 4px 10px; font-size: 0.75em; border: 1px solid rgba(0, 212, 255, 0.3); background: transparent; color: #00d4ff; border-radius: 4px; cursor: pointer; }
        .btn-small:hover { background: rgba(0, 212, 255, 0.1); }
        .btn:disabled { opacity: 0.5; cursor: not-allowed; }
        
        .message {
            padding: 10px 12px;
            border-radius: 6px;
            margin-bottom: 12px;
            display: none;
            font-size: 0.85em;
        }
        .message.success { display: block; background: rgba(76, 175, 80, 0.2); border: 1px solid rgba(76, 175, 80, 0.5); color: #81c784; }
        .message.error { display: block; background: rgba(244, 67, 54, 0.2); border: 1px solid rgba(244, 67, 54, 0.5); color: #ef9a9a; }
        .no-selection { text-align: center; padding: 40px 20px; color: #666; }
        .no-selection-icon { font-size: 2.5em; margin-bottom: 10px; }
        .loading { display: inline-block; width: 14px; height: 14px; border: 2px solid rgba(255,255,255,0.3); border-top-color: #00d4ff; border-radius: 50%; animation: spin 0.8s linear infinite; }
        @keyframes spin { to { transform: rotate(360deg); } }
        
        /* Bulk Actions */
        .bulk-actions {
            display: flex;
            gap: 8px;
            padding: 10px;
            background: rgba(0, 212, 255, 0.05);
            border-radius: 8px;
            margin-bottom: 12px;
            align-items: center;
        }
        .bulk-actions span { font-size: 0.8em; color: #888; margin-right: auto; }
        
        @media (max-width: 1000px) {
            .grid-layout { grid-template-columns: 1fr; }
            .device-list-container { max-height: 400px; }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>OpAMP Device Management</h1>
        <p class="header-subtitle">Edge Device Configuration & Data Emission Control</p>

        <div class="stats-bar" id="statsBar">
            <div class="stat-card">
                <div class="stat-value" id="totalDevices">0</div>
                <div class="stat-label">Total Devices</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="connectedDevices">0</div>
                <div class="stat-label">Connected</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="emissionOn">0</div>
                <div class="stat-label">Emission ON</div>
            </div>
            <!-- Dynamic agent type cards will be inserted here -->
        </div>

        <div class="filter-bar">
            <input type="text" class="search-box" id="searchBox" placeholder="Search devices by ID, type, pipeline..." oninput="applyFilters()">
            <button class="filter-btn active" data-filter="all" onclick="setFilter('all')">All</button>
            <button class="filter-btn" data-filter="connected" onclick="setFilter('connected')">Connected</button>
            <button class="filter-btn" data-filter="emission-on" onclick="setFilter('emission-on')">Emission ON</button>
            <button class="filter-btn" data-filter="emission-off" onclick="setFilter('emission-off')">Emission OFF</button>
        </div>

        <div class="grid-layout">
            <div class="card">
                <div class="section-title">
                    <span>Edge Devices</span>
                    <span class="device-count" id="filteredCount">0 devices</span>
                </div>
                <div class="bulk-actions" id="bulkActions">
                    <span>Bulk Actions:</span>
                    <button class="btn-small" onclick="bulkEmission(true)">Enable All Emission</button>
                </div>
                <div class="device-list-container">
                    <div id="deviceList" class="device-list">
                        <div class="no-selection"><span class="loading"></span><p style="margin-top:10px">Loading...</p></div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div id="messageBox" class="message"></div>
                <div id="noSelection" class="no-selection">
                    <div class="no-selection-icon">ðŸ“‹</div>
                    <p>Select a device to view and manage its configuration</p>
                </div>
                <div id="configSection" class="config-section">
                    <div class="config-header-row">
                        <div class="device-title">
                            <span class="device-title-name" id="selectedDeviceName"></span>
                            <span id="selectedAgentBadge" class="agent-badge"></span>
                        </div>
                        <div class="emission-toggle">
                            <span class="emission-label">Data Emission</span>
                            <div id="emissionSwitch" class="toggle-switch" onclick="toggleSelectedEmission()"></div>
                        </div>
                    </div>

                    <div style="margin-bottom:12px">
                        <div class="config-label">
                            <span>Current Configuration</span>
                            <button class="btn-small" onclick="refreshConfig()">Refresh</button>
                        </div>
                        <textarea id="currentConfig" class="current-config" readonly></textarea>
                    </div>

                    <div>
                        <div class="config-label"><span>New Configuration</span></div>
                        <textarea id="newConfig" class="new-config" placeholder="Enter new configuration..."></textarea>
                    </div>

                    <div class="button-row">
                        <button class="btn btn-primary" id="pushBtn" onclick="pushConfig()">Push Configuration</button>
                        <button class="btn btn-secondary" onclick="loadTemplate()">Load Template</button>
                        <button class="btn btn-secondary" onclick="copyConfig()">Copy Current</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        var state = {
            devices: [],
            filtered: [],
            selected: null,
            filter: 'all',
            search: '',
            agentTypes: {}
        };

        function fetchDevices() {
            fetch('/api/devices')
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    // Server returns sorted by ID, filter valid device IDs
                    state.devices = (data.devices || []).filter(function(d) {
                        return d.id && d.id.match(/^[a-zA-Z0-9-_]+$/);
                    });
                    updateStats();
                    applyFilters();
                })
                .catch(function(e) { console.error('Fetch error:', e); });
        }

        function updateStats() {
            var total = state.devices.length;
            var connected = 0, emissionOn = 0;
            state.agentTypes = {};

            state.devices.forEach(function(d) {
                if (d.connected) connected++;
                if (d.emission_enabled) emissionOn++;
                var type = d.agent_type || 'unknown';
                state.agentTypes[type] = (state.agentTypes[type] || 0) + 1;
            });

            document.getElementById('totalDevices').textContent = total;
            document.getElementById('connectedDevices').textContent = connected;
            document.getElementById('emissionOn').textContent = emissionOn;

            // Render dynamic agent type cards
            renderAgentTypeCards();
        }

        function renderAgentTypeCards() {
            var bar = document.getElementById('statsBar');
            // Remove old dynamic cards
            var oldCards = bar.querySelectorAll('.agent-type-card');
            oldCards.forEach(function(c) { c.remove(); });

            // Add new cards for each agent type
            var typeLabels = {
                'fluentbit': 'Fluent Bit',
                'unknown': 'Unknown'
            };

            Object.keys(state.agentTypes).sort().forEach(function(type) {
                var card = document.createElement('div');
                card.className = 'stat-card agent-type agent-type-card clickable';
                card.setAttribute('data-type', type);
                card.onclick = function() { filterByType(type); };
                card.innerHTML = '<div class="stat-value">' + state.agentTypes[type] + '</div>' +
                    '<div class="stat-label">' + (typeLabels[type] || type) + '</div>';
                bar.appendChild(card);
            });
        }

        function filterByType(type) {
            // Toggle type filter
            var cards = document.querySelectorAll('.agent-type-card');
            cards.forEach(function(c) {
                if (c.getAttribute('data-type') === type) {
                    c.classList.toggle('active');
                } else {
                    c.classList.remove('active');
                }
            });
            applyFilters();
        }

        function setFilter(f) {
            state.filter = f;
            var btns = document.querySelectorAll('.filter-btn');
            btns.forEach(function(b) {
                b.classList.toggle('active', b.getAttribute('data-filter') === f);
            });
            applyFilters();
        }

        function applyFilters() {
            var search = document.getElementById('searchBox').value.toLowerCase();
            var activeType = null;
            var activeCard = document.querySelector('.agent-type-card.active');
            if (activeCard) activeType = activeCard.getAttribute('data-type');

            state.filtered = state.devices.filter(function(d) {
                // Search filter
                if (search) {
                    var match = d.id.toLowerCase().indexOf(search) >= 0 ||
                        (d.agent_type && d.agent_type.toLowerCase().indexOf(search) >= 0) ||
                        (d.pipeline && d.pipeline.toLowerCase().indexOf(search) >= 0);
                    if (!match) return false;
                }
                // Type filter
                if (activeType && d.agent_type !== activeType) return false;
                // Status filter
                if (state.filter === 'connected' && !d.connected) return false;
                if (state.filter === 'emission-on' && !d.emission_enabled) return false;
                if (state.filter === 'emission-off' && d.emission_enabled) return false;
                return true;
            });

            document.getElementById('filteredCount').textContent = state.filtered.length + ' device' + (state.filtered.length !== 1 ? 's' : '');
            renderDevices();
        }

        function renderDevices() {
            var list = document.getElementById('deviceList');
            if (state.filtered.length === 0) {
                list.innerHTML = '<div class="no-selection"><div class="no-selection-icon">ðŸ“¡</div><p>' + 
                    (state.devices.length === 0 ? 'No devices connected' : 'No devices match filter') + '</p></div>';
                return;
            }

            var html = '';
            state.filtered.forEach(function(d) {
                var sel = state.selected === d.id ? 'selected' : '';
                var agentClass = d.agent_type || 'unknown';
                var typeLabels = { 'fluentbit': 'FB' };
                var agentLabel = typeLabels[d.agent_type] || d.agent_type || '?';

                html += '<div class="device-card ' + sel + '" onclick="selectDevice(\'' + d.id + '\')">';
                html += '<div class="device-header">';
                html += '<span class="device-name">' + d.id + '</span>';
                html += '<span class="agent-badge ' + agentClass + '">' + agentLabel + '</span>';
                html += '</div>';
                html += '<div class="device-meta">';
                html += '<span class="status-dot ' + (d.connected ? 'online' : 'offline') + '"></span>';
                html += '<span class="meta-tag">' + (d.pipeline || '-') + '</span>';
                html += '<span class="emission-badge ' + (d.emission_enabled ? 'on' : 'off') + '">' + (d.emission_enabled ? 'EMIT' : 'OFF') + '</span>';
                html += '</div></div>';
            });
            list.innerHTML = html;

            // Update selected device emission switch if visible
            if (state.selected) {
                var d = state.devices.find(function(x) { return x.id === state.selected; });
                if (d) updateEmissionSwitch(d.emission_enabled);
            }
        }

        function selectDevice(id) {
            state.selected = id;
            renderDevices();
            document.getElementById('noSelection').style.display = 'none';
            document.getElementById('configSection').classList.add('active');
            
            var d = state.devices.find(function(x) { return x.id === id; });
            document.getElementById('selectedDeviceName').textContent = id;
            var badge = document.getElementById('selectedAgentBadge');
            var sw = document.getElementById('emissionSwitch');
            
            if (d) {
                var typeLabels = { 'otelcol': 'OTel Collector', 'fluentbit': 'Fluent Bit', 'vector': 'Vector', 'telegraf': 'Telegraf' };
                badge.textContent = typeLabels[d.agent_type] || d.agent_type || 'Unknown';
                badge.className = 'agent-badge ' + (d.agent_type || 'unknown');
                updateEmissionSwitch(d.emission_enabled);
                sw.classList.toggle('disabled', !d.connected);
                // Lock toggle if emission is ON
                if (d.emission_enabled) {
                    sw.classList.add('locked');
                    sw.setAttribute('data-tooltip', 'Cannot turn off emission once started. Use config policies to reduce data.');
                } else {
                    sw.classList.remove('locked');
                    sw.removeAttribute('data-tooltip');
                }
            }
            refreshConfig();
        }

        function updateEmissionSwitch(isOn) {
            var sw = document.getElementById('emissionSwitch');
            sw.classList.toggle('on', isOn);
        }

        function toggleSelectedEmission() {
            if (!state.selected) return;
            var d = state.devices.find(function(x) { return x.id === state.selected; });
            if (!d || !d.connected) return;
            // Only allow OFF -> ON transition
            if (d.emission_enabled) {
                showMsg('Cannot turn off emission once started. Use config policies to reduce emission instead.', 'error');
                return;
            }
            toggleEmission(d.id, true);
        }

        function refreshConfig() {
            if (!state.selected) return;
            var ta = document.getElementById('currentConfig');
            ta.value = 'Loading...';
            fetch('/api/devices/' + state.selected + '/config')
                .then(function(r) { return r.json(); })
                .then(function(data) { ta.value = data.config || 'No config available'; })
                .catch(function(e) { ta.value = 'Error: ' + e.message; });
        }

        function pushConfig() {
            var id = state.selected;
            var cfg = document.getElementById('newConfig').value;
            if (!id) { showMsg('Select a device first', 'error'); return; }
            if (!cfg.trim()) { showMsg('Enter a configuration', 'error'); return; }
            var btn = document.getElementById('pushBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="loading"></span> Pushing...';
            fetch('/api/devices/config', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ deviceId: id, config: cfg })
            })
            .then(function(r) { return r.json(); })
            .then(function(res) {
                if (res.success) {
                    showMsg('Config pushed to ' + id, 'success');
                    document.getElementById('newConfig').value = '';
                    setTimeout(refreshConfig, 500);
                    setTimeout(fetchDevices, 1000);
                } else {
                    showMsg('Failed: ' + (res.error || 'Unknown'), 'error');
                }
            })
            .catch(function(e) { showMsg('Error: ' + e.message, 'error'); })
            .finally(function() { btn.disabled = false; btn.textContent = 'Push Configuration'; });
        }

        function toggleEmission(id, turnOn) {
            var d = state.devices.find(function(x) { return x.id === id; });
            if (!d) return;
            // For turning ON, use fluentbitOn() config
            var cfg = turnOn ? fluentbitOn() : '';
            
            fetch('/api/devices/config', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ deviceId: id, config: cfg, setEmission: turnOn })
            })
            .then(function(r) { return r.json(); })
            .then(function(res) {
                if (res.success) {
                    d.emission_enabled = turnOn;
                    updateStats();
                    applyFilters();
                    showMsg('Emission ' + (turnOn ? 'enabled' : 'disabled') + ' for ' + id, 'success');
                    if (state.selected === id) setTimeout(refreshConfig, 500);
                } else {
                    showMsg('Toggle failed: ' + res.error, 'error');
                }
            })
            .catch(function(e) { showMsg('Error: ' + e.message, 'error'); });
        }

        function bulkEmission(turnOn) {
            // Only allow enabling emission, not disabling
            if (!turnOn) {
                showMsg('Cannot disable emission. Use config policies to reduce data.', 'error');
                return;
            }
            var targets = state.filtered.filter(function(d) { return d.connected && !d.emission_enabled; });
            if (targets.length === 0) { showMsg('No devices to enable', 'error'); return; }
            
            var completed = 0;
            targets.forEach(function(d) {
                var cfg = fluentbitOn();
                fetch('/api/devices/config', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ deviceId: d.id, config: cfg, setEmission: true })
                })
                .then(function(r) { return r.json(); })
                .then(function(res) {
                    if (res.success) d.emission_enabled = true;
                    completed++;
                    if (completed === targets.length) {
                        updateStats();
                        applyFilters();
                        showMsg('Enabled emission for ' + completed + ' devices', 'success');
                    }
                });
            });
        }

        function fluentbitOn() {
            return '[SERVICE]\n    flush        5\n    daemon       Off\n    log_level    info\n    http_server  On\n    http_listen  0.0.0.0\n    http_port    2020\n    hot_reload   On\n\n[INPUT]\n    name         dummy\n    tag          logs\n    dummy        {"message":"test log","level":"info"}\n    rate         1\n\n[OUTPUT]\n    name         stdout\n    match        *\n    format       json_lines';
        }

        function loadTemplate() {
            var d = state.devices.find(function(x) { return x.id === state.selected; });
            if (!d) return;
            document.getElementById('newConfig').value = fluentbitOn();
            showMsg('Template loaded', 'success');
        }

        function copyConfig() {
            var cur = document.getElementById('currentConfig').value;
            if (cur && cur !== 'Loading...' && cur.indexOf('Error') !== 0) {
                document.getElementById('newConfig').value = cur;
                showMsg('Config copied', 'success');
            }
        }

        var msgTimer;
        function showMsg(msg, type) {
            var box = document.getElementById('messageBox');
            clearTimeout(msgTimer);
            box.textContent = msg;
            box.className = 'message ' + type;
            msgTimer = setTimeout(function() { box.className = 'message'; }, 4000);
        }

        fetchDevices();
        setInterval(fetchDevices, 5000); // Longer interval for scale
    </script>
</body>
</html>
